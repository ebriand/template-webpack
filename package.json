{
  "name": "template-webpack",
  "version": "0.1.0",
  "description": "A little template for init a project with webpack front & back",
  "dependencies": {
    "boom": "^4.0.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^15.0.3",
    "inert": "^4.0.1",
    "lodash": "^4.16.1",
    "source-map-support": "^0.4.2"
  },
  "devDependencies": {
    "angular": "^1.5.8",
    "angular-ui-router": "^0.3.1",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.0",
    "babel-loader": "^6.2.4",
    "babel-preset-latest": "^6.16.0",
    "bootstrap": "^3.3.6",
    "concurrently": "^2.2.0",
    "cross-env": "^2.0.1",
    "css-loader": "^0.24.0",
    "eslint": "^3.2.2",
    "eslint-config-angular": "^0.5.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-angular": "^1.3.0",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-lodash": "^1.9.4",
    "file-loader": "^0.9.0",
    "file-url": "^1.1.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "jquery": "^3.1.0",
    "ngtemplate-loader": "^1.3.1",
    "nodemon": "^1.10.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1",
    "webpack-node-externals": "^1.5.4"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run start:back\" \"npm run start:front\"",
    "start:back": "cross-env COMPONENT=back nodemon --watch \"src/server/**/*.js\" --exec \"webpack --colors --debug && node --debug dist/server/server.js\"",
    "start:front": "webpack-dev-server",
    "build": "cross-env NODE_ENV=production webpack --progress --display-error-details",
    "clean": "rimraf dist",
    "prestart": "npm run clean",
    "prebuild": "npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:ebriand/template-webpack.git"
  }
}
